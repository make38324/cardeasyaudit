<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Swntekczm="http://schemas.android.com/apk/res-auto"
    tools:context="com.swntek.czm.cardeasyaudit.ShopAuditActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <include layout="@layout/titlebar2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#c4c4c6"
            android:background="#eff0f2"
            android:text="商户基本信息"
            android:paddingLeft="10dp"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_bossname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="老板姓名"
            Swntekczm:btext="请输入老板姓名"
            Swntekczm:img="@mipmap/bossname"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_managename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="公司名称"
            Swntekczm:btext="请输入公司姓名"
            Swntekczm:img="@mipmap/home_addshop"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="联系人手机"
            Swntekczm:btext="请输入联系人手机"
            Swntekczm:img="@mipmap/phone02"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_servicetype"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="服务类型"
            Swntekczm:btext="请输入服务类型"
            Swntekczm:img="@mipmap/servicetype"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="公司详细地址"
            Swntekczm:btext="公司详细地址"
            Swntekczm:img="@mipmap/gs"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/iv_left01"
                android:layout_width="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="match_parent"
                android:src="@mipmap/module" />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_left01"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:textColor="#ff333333"
                android:text="运营模式" />
            <RadioGroup
                android:id="@+id/rg_mosi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_text"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rb_lsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连锁店"
                    />
                <RadioButton
                    android:id="@+id/rb_dd"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单店"
                    />
            </RadioGroup>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#c4c4c6"
            android:background="#eff0f2"
            android:text="商户法人实名认证"
            android:paddingLeft="10dp"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_farenname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="法人姓名"
            Swntekczm:btext="请输入真实姓名"
            Swntekczm:img="@mipmap/daibiaoren"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <com.swntek.czm.cardeasyaudit.view.MyItemView
            android:id="@+id/miv_farenshenfen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            Swntekczm:text="法人身份证"
            Swntekczm:btext="请输入你的身份证号码"
            Swntekczm:img="@mipmap/farennumber"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="* 若您的身份证最后一位为大写'X' 请输入大写'X'"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:textColor="#5a9fd4"
        android:background="@color/white"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolor"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#c4c4c6"
            android:background="#eff0f2"
            android:text="商户法人实名认证"
            android:paddingLeft="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_yyzz"
                android:layout_width="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:src="@mipmap/yyzz"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="13sp"
                android:paddingLeft="6dp"
                android:paddingRight="15dp"
                android:text="营业执照" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/shangchuantupian">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="上传图片"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="(营业执照复印件需盖公章)" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="#c4c4c6"
            android:background="#eff0f2"
            android:text="身份证认证"
            android:paddingLeft="10dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_shenfen01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/renzheng_02"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="半身照"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            >
            <ImageView
                android:id="@+id/iv_shenfen02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/renzheng_03"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="身份证正面"
                android:textColor="#ff333333"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_left01"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textColor="#ff333333"
            android:text="请确保身份证四角完整,文字清晰可辨认" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/shenfenzheng"
            android:scaleType="fitStart"
            android:layout_marginLeft="6dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linecolor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:layout_toRightOf="@+id/iv_left01"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textColor="#ff333333"
            android:layout_marginBottom="15dp"
            android:text="请您放心，您所输入的真实姓名和身份证信息卡易永远不会用于他用，安全我们看的尤其重要，我们依靠您的真实身份信息，将权利保障您的资金和信息安全。" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="20dp"
            android:background="@color/btnblue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="提交进行审核"
            android:textSize="18sp"
            android:textColor="@color/white"
            >
        </Button>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
